@model List<Player>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-capitalize text-primary">Top Ranked Indian Cricket Players</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-8">
            <h2 class="text-secondary text-center">Players List</h2>
        </div>
        <div class="col-4 text-end">
            <a asp-controller="Player" asp-action="Create" class="btn btn-info">Create</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" width="70%">
                    <thead class="bg-info">
                        <tr>
                            <th>Rank</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>Date Of Birth</th>
                            <th>Role</th>
                            <th>Batting Style</th>
                            <th>Bowling Style</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in Model)
                        {
                            <tr>
                                <td>@player.Rank</td>
                                <td>@player.FirstName</td>
                                <td>@player.LastName</td>
                                <td>@player.DateOfBirth.ToShortDateString()</td>
                                <td>@player.Role</td>
                                <td>@player.BattingStyle</td>
                                <td>@player.BowlingStyle</td>
                                <td>
                                    <div>
                                        <a asp-controller="Player" asp-action="Edit" asp-route-id="@player.Id" class="btn btn-warning">Edit</a>
                                        <a asp-controller="Player" asp-action="Delete" asp-route-id="@player.Id" class="btn btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div>No data to show</div>
            }
        </div>
    </div>
</div>