@model Player

<div class="container">
    <div class="row">
        <div class="col-6">
            <h3 class="text-primary">Delete Player</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form method="post">
                <div class="row">
                    <div class="mb-3 col-3">
                        <label asp-for="Rank" class="form-label"></label>
                        <input asp-for="Rank" class="form-control" value="@Model.Rank" disabled />
                        <span asp-validation-for="@Model.Rank" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" value="@Model.FirstName" disabled />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" value="@Model.LastName" disabled />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input type="date" asp-for="DateOfBirth" class="form-control"
                               value="@Model.DateOfBirth.Date.ToString("yyyy-MM-dd")" disabled />
                        <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-3">
                        <label asp-for="Role" class="form-label"></label>
                        <select asp-for="Role" asp-items="(IEnumerable<SelectListItem>)@ViewData["PlayerRoleLIst"]"
                                class="form-select" disabled>
                            <option selected>@Model.Role</option>
                        </select>
                    </div>
                    <div class="mb-3 col-3">
                        <label asp-for="BattingStyle" class="form-label"></label>
                        <select asp-for="BattingStyle" asp-items="(IEnumerable<SelectListItem>)@ViewData["BattingStyleList"]"
                                class="form-select" disabled>
                            <option selected>@Model.BattingStyle</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-3">
                        <label asp-for="BowlingStyle" class="form-label"></label>
                        <select asp-for="BowlingStyle" asp-items="(IEnumerable<SelectListItem>)@ViewData["BowlingStyleList"]"
                                class="form-select" disabled>
                            <option selected>@Model.BowlingStyle</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-6 text-center">
                        <a asp-controller="Player" asp-action="Index" class="btn btn-primary">Back</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}